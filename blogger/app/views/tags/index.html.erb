<h1>All Tags</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
     	<%= link_to tag.title, tag_path(tag) %>
    </li>
  <% end %>
</ul>

<%= link_to "Create a New Tag", new_tag_path, class: "new_tag" %>
<%= link_to "<< Back to Tag List", tag_path %>
<%= link_to "delete", tag_path(@tag), method: :delete, data: {confirm: "Really delete the tag?"} %>